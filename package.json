{
  "name": "typescript-node-express",
  "version": "1.0.0",
  "description": "use ts and express setting up a server-side development environment",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "dev_mon": "cross-env NODE_ENV=development nodemon --exec 'ts-node' ./src/index.ts",
    "start": "cross-env NODE_ENV=production node ./build/index.js --production",
    "prd": "cross-env NODE_ENV=production node ./build/index.js --production"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.3",
    "@types/mongoose": "^5.7.8",
    "cross-env": "^7.0.2",
    "express": "^4.18.2",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.7",
    "nodemon": "^2.0.2",
    "ts-node": "^8.8.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
